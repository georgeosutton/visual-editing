{
  "name": "visual-editing",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "prebuild": "bun run typegen",
    "build": "pnpm run prebuild && next build && pnpm run postbuild",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "start": "next start",
    "lint": "tsc --noemit && next lint",
    "typegen": "bun run schema:extract && bun run typegen:generate",
    "schema:extract": "sanity schema extract --path=./typegen/schema.json",
    "typegen:generate": "sanity typegen generate",
    "posttypegen": "bun run ./scripts/fragment-typegen.ts"
  },
  "dependencies": {
    "@portabletext/react": "^3.2.1",
    "@radix-ui/react-slot": "^1.2.0",
    "@sanity/client": "^6.29.0",
    "@sanity/icons": "^3.7.0",
    "@sanity/image-url": "^1.1.0",
    "@sanity/react-loader": "^1.11.6",
    "@sanity/vision": "^3.85.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash.get": "^4.4.2",
    "next": "14.2.26",
    "next-sanity": "^9.10.2",
    "next-sitemap": "^4.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "rxjs": "^7.8.2",
    "sanity": "^3.85.1",
    "sanity-image": "^0.1.9",
    "sanity-plugin-media": "^2.4.2",
    "sonner": "^2.0.3",
    "styled-components": "^6.1.17",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/lodash.get": "^4.4.9",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af"
}
